<h1>Albums</h1>

<span class="sort">
  <div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
      Sort by
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to "Added (first)", albums_path(sort_by: "oldest") %></li>
      <li><%= link_to "Added (last)", albums_path(sort_by: "newest") %></li>
      <li><%= link_to "Name", albums_path(sort_by: "name") %></li>
    </ul>
  </div>
</span>
<br>
<table>
  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= image_tag album.album_image_url, :size => "150x150" %></td>
        <td><%= link_to album.album_name, album_path(album.id) %></td>
        <td> <%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_album btn btn-primary' %></td>
    <% end %>
  </tbody>
</table>
<%= link_to "Add new Album", new_album_path, class: "btn btn-primary" %>
<%= link_to "Remove All", remove_all_albums_path, :method => :get, :class => 'btn btn-primary' %>
