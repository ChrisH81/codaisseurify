<table>
  <tbody>
    <% @artist.albums.each do |album| %>
      <tr>
        <td><%= image_tag album.album_image_url, :size => "150x150" %></td>
        <td><%= link_to album.album_name, album_path(album.id) %></td>
        <td> <%= link_to 'Remove Album', album, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_album btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
