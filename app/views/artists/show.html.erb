<h1><%= @artist.name %></h1>

<%= image_tag @artist.image_url, :size => "260x180" %>
<br><br>
<p>Bio: <%= @artist.bio %></p>

<hr>

<div class = "list_container">
  <h3>Albums For This Artist</h3>
  <% if @artist.albums.any?  %>
    <div class="row">
      <% @artist.albums.each do |album| %>
        <div class="col-md-3 layout"><p><%= link_to album.album_name, album_path(album) %></p>
        <%= image_tag album.album_image_url, :size => "150x150" %>
        <%= link_to 'Remove Album', album, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_album btn btn-primary' %></div>
      <% end %>
    </div>
  <% else %>
    <p>There are no albums for this artist</p>
  <% end %>
</div>
<hr>
<div>
  <%= link_to "Update Artist", edit_artist_path(@artist.id), class: "btn btn-primary" %>
  <%= link_to "Add new Album", new_album_path, class: "btn btn-primary" %>
  <%= link_to "Delete Artist", artist_path(@artist.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
  <%= link_to "Back To Artists", artists_path, class: "btn btn-primary" %>
</div>
<br>
<h3>Add New Album</h3>
<%= form_for Album.new do |f| %>

  <div class="form-group">
    <label>Album Name</label>
    <%= f.text_field :album_name, placeholder: "Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Year</label>
    <div class="input-group">
      <%= f.number_field :released, placeholder: "eg. 1999", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label>Album Image</label>
    <%= f.text_field :album_image_url, placeholder: "album image address (e.g. http://www.deftonesworld.com/wp-content/uploads/2011/10/the-deftones.jpg)", class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label :artist_id %>
  <%= f.collection_select(:artist_id, Artist.all, :id, :name) %>
  </div>

  <div class="actions">
    <%= f.submit "Save", :remote => true, class: "btn btn-primary" %>
  </div>
<% end %>
